<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Blogs</title>

    <!--Bootstrap Icon Link-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="css/my_blogs.css">
</head>

<body>
    <header class="bg-dark text-white p-3 text-center d-flex justify-content-between">
        <div class="text-start">
            <a href="/" class="d-flex text-decoration-none">
                <i class="bi bi-house-door-fill fs-2"></i>
                <span class="d-flex align-items-center"><h3 class="m-0 ">MY-Blog</h3></span>
            </a>
        </div>

        <p>Manage your blogs with ease</p>
        <div class="row mb-3">
            <div class="col-md-12">
                <a href="/addForm" class="btn btn-success">Create New Blog</a>
            </div>
        </div>
    </header>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 bg-primary sidebar py-5 position-fixed" id="sidebar">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/myBlogs">My Blogs</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/allblog">All Blogs</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#">Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/logout">Logout</a>
                    </li>
                </ul>
            </nav>

            <!-- Main Content -->
            <main class="col-md-9 col-lg-10 offset-md-3 offset-lg-2 p-4">
                <div class="container my-5">
                    <!-- Blog Cards Row -->
                    <div class="my_bloglist">
                        <div class="row">
                            <!-- Check if blogs exist -->
                            <% if (blogs.length> 0) { %>
                            <!-- Each Blog Card -->
                            <% blogs.forEach((data)=> { %>
                            <div class="col-md-4 mb-4">
                                <div class="card h-100 shadow-sm">
                                    <img src="<%= data.path %>" class="card-img-top" alt="Blog Image">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <%= data.title %>
                                        </h5>
                                        <p class="card-text">
                                            <%= data.content.substring(0, 100) %>...
                                        </p>
                                    </div>
                                    <div class="card-footer d-flex justify-content-between align-items-center">
                                        <small class="text-muted">Posted on: <%= new Date(data.createdAt).toLocaleString() %></small>
                                        <div>
                                            <a href="/edit/<%=data._id %>" class="btn btn-primary btn-sm">Edit</a>
                                            <a href="/delete/<%=data._id %>" class="btn btn-danger btn-sm">Delete</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                            <% } else { %>
                            <p class="text-center">No blogs found. Start writing your first blog!</p>
                            <% } %>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
